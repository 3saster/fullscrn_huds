AddOptionMenu "HUDOptions"
{
   	StaticText ""     
   	Submenu "Fullscreen Status Bar", "FullscreenStatusbarOptions"
}

OptionValue "FullscreenMode"
{
	10, "Off"
	11, "On"
}

OptionValue "LevelStats"
{
	0, "Off"
	1, "Percentages"
	2, "Countdown"
	3, "Fraction"
}

OptionValue "LevelStatsFont"
{
	0, "Default"
	1, "Console Font"
	2, "Status Report"
	3, "Memento Mori 2"
}

OptionValue "LevelStatsPosition"
{
	0, "Off"
	1, "Top left"
	2, "Top right"
	3, "Center left"
	4, "Center right"
	5, "Bottom left"
	6, "Bottom right"
}

OptionValue "Colors"
{
	0, "Green"
	1, "Red"
	2, "None"
}

OptionValue "Opaque"
{
	0, "Off"
	1, "Numbers"
	2, "Numbers & graphics"
}

OptionMenu "FullscreenStatusbarOptions"
{
   	Position -15
   	Title "Fullscreen Status Bar"
   	StaticText ""
   	StaticText "General Settings", "gold"
	Option "Fullscreen", "screenblocks", "FullscreenMode"
   	ScaleSlider "Scaling", "hud_scale", -1.0, 8.0, 1.0, "$SCALEMNU_USEUI", "$SCALEMNU_USEFS"
	Option "Force HUD Override", "fullhud_override", "OnOff"
	StaticText ""
   	StaticText "Status Bar Appearance", "gold"
   	Option "Split bar", "fullhud_split", "OnOff"
	Slider "Transparency", "fullhud_trans", 0, 1, 0.1
	Option "Opaque elements", "fullhud_opaque", "Opaque"
   	StaticText ""
   	StaticText  "Optional Settings", "gold"
	Option "Use Boom HUD colors", "fullhud_boomcolors", "OnOff"
	IfGame(Doom) 
	{
		Option "Indicate berserk mode", "fullhud_showberserk", "OnOff"
	}
	IfGame(Chex) 
	{
		Option "Replace Chex logos", "fullhud_chexarms", "OnOff"
	}
	Option "Show arms on split bar", "fullhud_splitarms", "OnOff", "fullhud_split"
	IfGame(Doom, Chex) 
	{	
		Option "Inventory items can replace mugshot", "fullhud_invovermug", "OnOff"
	}
 	IfGame(Doom, Chex, Heretic)
	{
		Option "Hide status bar on automap", "fullhud_automaphide", "OnOff"
	}
 	IfGame(Hexen)
	{
		Option "Keys/armor as panels on automap", "fullhud_automaphide", "OnOff"
	}
   	StaticText ""
   	StaticText  "Level Stats", "gold"
	Option "Stats display", "fullhud_stats_type", "LevelStats"
	Option "Stats font", "fullhud_stats_font", "LevelStatsFont"
	Option "Completion color", "fullhud_stats_comp", "Colors", "fullhud_stats_type"
	IfGame(Doom, Heretic, Hexen)
	{
		Option "Kill counter", "fullhud_stats_kills", "LevelStatsPosition", "fullhud_stats_type"
	}
	IfGame(Chex)
	{
		Option "Zorch counter", "fullhud_stats_kills", "LevelStatsPosition", "fullhud_stats_type"
	}
	Option "Secret counter", "fullhud_stats_secrets", "LevelStatsPosition", "fullhud_stats_type"
	Option "Item counter", "fullhud_stats_items", "LevelStatsPosition", "fullhud_stats_type"
	Option "Level time", "fullhud_stats_time", "LevelStatsPosition", "fullhud_stats_type"
	StaticText ""
	Submenu "Credits/About", "FullscreenCreditsMenu"
}

