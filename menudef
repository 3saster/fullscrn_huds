AddOptionMenu "HUDOptions"
{
	StaticText ""     
	Submenu "$FULLHUD_MODTITLE", "FullscreenStatusbarOptions"
}

OptionValue "FullscreenMode"
{
	10, "$OPTVAL_OFF"
	11, "$OPTVAL_ON"
}

OptionValue "LevelStats"
{
	0, "$OPTVAL_OFF"
	1, "$FULLHUD_LS_PERCENTAGES"
	2, "$FULLHUD_LS_COUNTDOWN"
	3, "$FULLHUD_LS_FRACTION"
}

OptionValue "LevelStatsFont"
{
	0, "$OPTVAL_DEFAULT"
	1, "$FULLHUD_FONT_CONFONT"
	2, "$FULLHUD_FONT_STATREPORT"
	3, "$FULLHUD_FONT_MM2"
}

OptionValue "LevelStatsPosition"
{
	0, "$OPTVAL_OFF"
	1, "$FULLHUD_LSP_TL"
	2, "$FULLHUD_LSP_TR"
	3, "$FULLHUD_LSP_CL"
	4, "$FULLHUD_LSP_CR"
	5, "$FULLHUD_LSP_BL"
	6, "$FULLHUD_LSP_BR"
}

OptionValue "Colors"
{
	0, "$C_GREEN"
	1, "$C_RED"
	2, "$OPTVAL_NONE"
}

OptionValue "Opaque"
{
	0, "$OPTVAL_OFF"
	1, "$FULLHUD_OPAQUE_NUM"
	2, "$FULLHUD_OPAQUE_NUMGRAPH"
}

OptionMenu "FullscreenStatusbarOptions"
{
   	Title "$FULLHUD_MODTITLE"
   	StaticText ""
	Submenu "$FULLHUD_SETTINGSNAME_GENERAL", "GeneralSettings"
	Submenu "$FULLHUD_SETTINGSNAME_OPTIONAL", "OptionalSettings"
	Submenu "$FULLHUD_SETTINGSNAME_STATS", "StatsSettings"
   	StaticText ""
	Submenu "$FULLHUD_SETTINGSNAME_CREDITS", "FullscreenCredits"
}

OptionMenu "GeneralSettings"
{
   	Title "$FULLHUD_SETTINGSNAME_GENERAL"
   	StaticText ""
	Option "$FULLHUD_GENERAL_FULLSCREEN", "screenblocks", "FullscreenMode"
   	ScaleSlider "$FULLHUD_GENERAL_SCALING", "hud_scale", -1.0, 8.0, 1.0, "$SCALEMNU_USEUI", "$SCALEMNU_USEFS"
	Option "$FULLHUD_GENERAL_FORCEOVERRIDE", "fullhud_override", "OnOff"
   	StaticText ""
   	Option "$FULLHUD_GENERAL_SPLIT", "fullhud_split", "OnOff"
	Slider "$FULLHUD_GENERAL_TRANSPARENCY", "fullhud_trans", 0, 1, 0.1
	Option "$FULLHUD_GENERAL_OPAQUE", "fullhud_opaque", "Opaque"
}

OptionMenu "OptionalSettings"
{
   	Title "$FULLHUD_SETTINGSNAME_OPTIONAL"
   	StaticText ""
	Option "$FULLHUD_OPTIONAL_BOOMHUD", "fullhud_boomcolors", "OnOff"
	IfGame(Doom) 
	{
		Option "$FULLHUD_OPTIONAL_BERSERK", "fullhud_showberserk", "OnOff"
	}
	IfGame(Chex) 
	{
		Option "$FULLHUD_OPTIONAL_CHEXLOGO", "fullhud_chexarms", "OnOff"
	}
	Option "$FULLHUD_OPTIONAL_SPLITARMS", "fullhud_splitarms", "OnOff", "fullhud_split"
	IfGame(Doom, Chex) 
	{	
		Option "$FULLHUD_OPTIONAL_INVREPLACE", "fullhud_invovermug", "OnOff"
	}
 	IfGame(Doom, Chex, Heretic)
	{
		Option "$FULLHUD_OPTIONAL_HIDEAUTOMAP", "fullhud_automaphide", "OnOff"
	}
 	IfGame(Hexen)
	{
		Option "$FULLHUD_OPTIONAL_HEXENAUTOMAP", "fullhud_automaphide", "OnOff"
	}
}

OptionMenu "StatsSettings"
{
   	Title "$FULLHUD_SETTINGSNAME_STATS"
   	StaticText ""
	Option "$FULLHUD_STATS_STATDISPLAY", "fullhud_stats_type", "LevelStats"
	Option "$FULLHUD_STATS_STATFONT", "fullhud_stats_font", "LevelStatsFont"
	Option "$FULLHUD_STATS_COMPCOLOR", "fullhud_stats_comp", "Colors", "fullhud_stats_type"
   	StaticText ""
	IfGame(Doom, Heretic, Hexen)
	{
		Option "$FULLHUD_STATS_KILLS", "fullhud_stats_kills", "LevelStatsPosition", "fullhud_stats_type"
	}
	IfGame(Chex)
	{
		Option "$FULLHUD_STATS_KILLS_CHEX", "fullhud_stats_kills", "LevelStatsPosition", "fullhud_stats_type"
	}
	Option "$FULLHUD_STATS_SECRETS", "fullhud_stats_secrets", "LevelStatsPosition", "fullhud_stats_type"
	Option "$FULLHUD_STATS_ITEMS", "fullhud_stats_items", "LevelStatsPosition", "fullhud_stats_type"
	Option "$FULLHUD_STATS_LEVELTIME", "fullhud_stats_time", "LevelStatsPosition", "fullhud_stats_type"
	Option "$FULLHUD_STATS_POWERUPS", "fullhud_stats_powerups", "LevelStatsPosition", "fullhud_stats_type"
}

